<?xml version="1.0" encoding="UTF-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

 <style name="main_theme" parent="android:Theme.Holo.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:colorBackground">@null</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:popupMenuStyle">@style/popup_style</item>
    <item name="android:progressDrawable">@drawable/progress_loading</item>
       <item name="android:padding">0dp</item>
 </style>

 <style name="popup_style" parent="@android:style/Widget.PopupMenu">
    <item name="android:popupBackground">@android:color/black</item>
  </style>

  <style name="splash_theme" parent="main_theme">
    <item name="android:windowBackground">@drawable/splash</item>
  </style>

  <style name="general_theme" parent="main_theme">
    <item name="android:windowBackground">@drawable/login_background</item>
  </style>

  <style name="login_social_button_style">
    <item name="android:layout_width">200dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:layout_marginTop">15dp</item>
    <item name="android:textSize">24sp</item>
    <item name="android:layout_centerHorizontal">true</item>
  </style>

    <style name="text_view_normal_font_style">
    <item name="fontName">"times_new_roman"</item>
  </style>

  <style name="progress_dialog_theme" parent="android:Theme.Holo.Dialog">
    <item name="android:alertDialogStyle">@style/progress_dialog_style</item>
    <item name="android:windowBackground">@color/progress_transparent</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>

 <style name="progress_dialog_style">
<item name="android:bottomBright">@color/progress_transparent</item>
<item name="android:bottomDark">@color/progress_transparent</item>
<item name="android:bottomMedium">@color/progress_transparent</item>
<item name="android:centerBright">@color/progress_transparent</item>
<item name="android:centerDark">@color/progress_transparent</item>
<item name="android:centerMedium">@color/progress_transparent</item>
<item name="android:fullBright">@color/progress_transparent</item>
<item name="android:fullDark">@color/progress_transparent</item>
<item name="android:topBright">@color/progress_transparent</item>
<item name="android:topDark">@color/progress_transparent</item>
</style>

</resources>